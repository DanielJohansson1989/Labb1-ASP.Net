@model SearchString

<div class="text-center">
    <h1 class="display-3 fw-bold text-body-emphasis">Welcome to my library</h1>
    <form asp-action="SearchForBooks" asp-controller="Book" method="get" class="form-group">
        <input type="text" asp-for="SearchKeyword" placeholder="Title, author or genre"/>
        <input type="submit" value="Search" class="btn btn-primary" />
    </form>
</div>

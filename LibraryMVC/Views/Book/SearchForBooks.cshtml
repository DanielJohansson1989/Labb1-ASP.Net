@model IEnumerable<Book>


@if (Model == null || !Model.Any())
{
   
    <p class="m-4 fw-bold">No books found matching your search criteria.</p>
    
}
<table class="table">
    @foreach (var book in Model)
    {
        <tr>
            <td class="col-2">
                <img src="@book.ImageURL" alt="@book.Title" />
            </td>
            <td class="col-10">
                <h3 class="text-white p-2">@Html.DisplayFor(model => book.Title)</h3>
                <h5 class="text-white p-2">@Html.DisplayFor(model => book.Author)</h5>
                <div class="mt-3 p-2 ">
                    @if (book.Available)
                    {
                        <span class="bg-success p-3 fw-bold rounded text-white">Available</span>
                    }
                    else
                    {
                        <span class="bg-danger p-3 fw-bold rounded">Currently unavailable</span>
                    }
                </div>
                <div class="p-2">
                    <a asp-action="GetDetails" asp-route-id="@book.ID" class="btn btn-outline-primary fw-bold mt-3">
                        Details
                    </a>
                </div>
            </td>
        </tr>
    }

</table>
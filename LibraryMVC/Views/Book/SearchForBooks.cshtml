@model IEnumerable<Book>


@if (Model == null || !Model.Any())
{
    <p>No books found matching your search criteria.</p>
}
<table class="table">
    @foreach (var book in Model)
    {
        <tr>
            <td class="align-middle">
                <img src="@book.ImageURL" alt="@book.Title" />
            </td>
            <td>
                <h3 class="text-white">@Html.DisplayFor(model => book.Title)</h3>
                <h5 class="text-white">@Html.DisplayFor(model => book.Author)</h5>
                <div class="mt-3 p-2 ">
                    @if (book.Available)
                    {
                        <span class="bg-success p-3 fw-bold rounded text-white">Available</span>
                    }
                    else
                    {
                        <span class="bg-danger p-3 fw-bold rounded">Currently unavailable</span>
                    }
                </div>
            </td>
            <td>
                <a asp-action="GetDetails" asp-route-id="@book.ID" class="btn btn-outline-primary fw-bold">
                    Details
                </a>
            </td>
        </tr>
    }

</table>
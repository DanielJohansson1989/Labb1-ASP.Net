@model CreateBookDTO

<form asp-action="CreateBook">
    <div class="form-group">
        <label asp-for="Title" class="control-group"></label>
        <input asp-for="Title" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Author" class="control-group"></label>
        <input asp-for="Author" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="DateOfPublication" class="control-group"></label>
        <input asp-for="DateOfPublication" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Genre" class="control-group"></label>
        <input asp-for="Genre" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-primary" />
    </div>

</form>
<div>
    <a asp-action="Index" asp-controller="Home" class="btn btn-outline-danger">Cancel</a>
</div>